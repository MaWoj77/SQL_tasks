USE aggregates;

SELECT * FROM batman;

SELECT COUNT(id) FROM batman;

SELECT COUNT(age) FROM batman;

SELECT COUNT(age) FROM batman
WHERE age > 40;

SELECT SUM(price) FROM batman;

SELECT SUM(age) FROM batman
WHERE sex = "F";

SELECT SUM(price) FROM batman
WHERE gift = "komputer"
OR gift = "okno";

SELECT MAX(price) FROM batman;

SELECT MAX(start_date) FROM batman;

SELECT last_name FROM batman
ORDER BY last_name DESC
LIMIT 1;

SELECT MAX(last_name) FROM batman;

SELECT MIN(price) FROM batman;

SELECT MIN(start_date) FROM batman;

SELECT last_name FROM batman
ORDER BY last_name
LIMIT 1;

SELECT MIN(last_name) FROM batman;

SELECT MIN(price) AS "cena minimalna", MAX(price) AS "cena maksymalna" FROM batman;

SELECT MAX(price) - MIN(price) FROM batman;

SELECT ROUND(AVG(age)) FROM batman;

SELECT ROUND(SUM(age) / COUNT(age)) FROM batman;

SELECT ROUND(AVG(CASE WHEN sex = "F" THEN age  END)) AS "Kobiety",
ROUND(AVG(CASE WHEN sex = "M" THEN age END)) AS "Mezczyzni"
FROM batman;
