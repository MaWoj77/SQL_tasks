USE aggregates;

SELECT * FROM batman;

SELECT CONCAT(first_name, ' ' , last_name) AS "Pracownik" FROM batman;

SELECT CONCAT(gift, ' - ' , price) AS "Cennik" FROM batman;

SELECT CONCAT(first_name, ' ' , last_name) AS "Pracownik", CONCAT(gift, ' - ' , price) AS "Cennik" FROM batman;

SELECT UPPER(gift) FROM batman;

SELECT LOWER(first_name) FROM batman;

SELECT last_name AS "nazwisko", LENGTH(last_name) AS "dlugosc" FROM batman; 

SELECT LEFT(first_name, 2) FROM batman;

SELECT first_name AS "first name", last_name AS "last name", 
CONCAT(LOWER(LEFT(first_name, 1)), LOWER(LEFT(last_name, 3))) AS "login"
FROM batman;
