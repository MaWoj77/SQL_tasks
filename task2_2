USE Pracownicy;

SELECT * FROM Pracownicy2;

SET SQL_SAFE_UPDATES = 0;

DELETE FROM Pracownicy2
WHERE Pracownicy = 'ID';

SET SQL_SAFE_UPDATES = 1;

SELECT * FROM Pracownicy2;

ALTER TABLE Pracownicy2 
CHANGE Pracownicy ID INTEGER PRIMARY KEY;

ALTER TABLE Pracownicy2
CHANGE Column2 Imie VARCHAR(20);

ALTER TABLE Pracownicy2
CHANGE Column3 Nazwisko VARCHAR(20);

ALTER TABLE Pracownicy2
CHANGE Column4 Wiek INTEGER CHECK (Wiek > 0);

ALTER TABLE Pracownicy2
CHANGE Column5 Kurs VARCHAR(20);

SELECT * FROM Pracownicy2;

