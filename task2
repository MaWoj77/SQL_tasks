CREATE DATABASE School_Coding;

CREATE TABLE School_Coding.Mentors (
id INTEGER PRIMARY KEY,
name VARCHAR(255),
surname VARCHAR(255),
speciality VARCHAR(255),
start_date DATE,
termination_date DATE
);

USE School_Coding;

SELECT * FROM Mentors;

