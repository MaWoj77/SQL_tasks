ALTER TABLE Mentors
ADD COLUMN salary INT NOT NULL DEFAULT 1000;

SELECT * FROM Mentors;

UPDATE Mentors
SET salary = 500
WHERE id > 0;

UPDATE Mentors
SET salary = 1000
WHERE id = 1 OR id = 2 OR id = 3;

